<div id="sidebar">

  <% if @riddle %>
  <div id="random_riddle">
    <h2>Riddle</h2>
    <p class='question'><%=@riddle.ask %></p>
    <p>
      <a href='#' class='riddle_response' onclick="jQuery(this).hide().siblings('.answer').show()">Click here for answer</a>
      <span class='answer' style='display: none'><%=@riddle.riddle_response %></span>
    </p>
  </div>
  <% end %>
  <p>
  <div id="twitter"></div>
  </p>
</div>
